import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

import javax.swing.JOptionPane;

public class Conexion {
    private final String db = "?"; //? = NOMBRE DE LA BASE DE DATOS
    private final String url = "jdbc:mysql://localhost:3306/";
    private String user = "root";
    private String password = "";
    private final String driver = "com.mysql.cj.jdbc.Driver";
    Connection cx;
   
    public Conexion() {
    }
   
    public Connection conectar() {
        try {
            Class.forName(driver);
            cx = DriverManager.getConnection(url + db, user, password);
        } catch (ClassNotFoundException | SQLException e) {    //Excepciones
            JOptionPane.showMessageDialog(null, "NO SE PUDO CONECTAR LA BASE DE DATOS, DESCARGUELA.");    //Mensaje de que no se puede conectar
        }
        return this.cx;
    }
   
    public void desconectar() {try {cx.close();} catch (SQLException e) {e.printStackTrace();}}
    public String getUser() {return this.user;}
    public void setUser(String user) {this.user = user;}
    public String getPassword() {return this.password;}
    public void setPassword(String password) {this.password = password;}
}
	
