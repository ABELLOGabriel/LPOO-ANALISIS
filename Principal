import java.awt.*;
import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class Pepito extends JFrame {
	public JPanel panel;
	
	public Pepito() {
		setBounds(100,200,400,400); 
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setTitle("DataLive");
		iniciarComponentes();
		setVisible(true);
	}
	
	private void iniciarComponentes()
	{
		CrearPaneles();
		CrearBotones();
	}
	
	private void CrearPaneles() {
		panel = new JPanel();
		panel.setBackground(Color.gray);
		panel.setLayout(null);
		this.getContentPane().add(panel);
	}
	
	private void CrearBotones() {
		JButton boton1 = new JButton("Iniciar Sesion");
		boton1.setBounds(100, 150, 200, 50);
		boton1.setEnabled(true);
		boton1.setMnemonic('r'); // alt + letra
		boton1.setForeground(Color.darkGray);
		panel.add(boton1);
		
		boton1.addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				JFrame ventanaEmergente = new JFrame("Ventana Emergente");
                ventanaEmergente.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
                ventanaEmergente.setSize(200, 100);
                ventanaEmergente.setLocationRelativeTo(null); // Centrar la ventana emergente
                ventanaEmergente.setVisible(true);
                
			}
		});
		
		JButton boton2 = new JButton();
		boton2.setBounds(0, 0, 75, 75);
		// boton2.setOpaque(true);
		ImageIcon img = new ImageIcon("C:\\Users\\Alumno\\eclipse-workspace\\Pizzeria\\src\\Logo.png");
		boton2.setIcon(new ImageIcon(img.getImage().getScaledInstance(boton2.getWidth(), boton2.getHeight(), Image.SCALE_SMOOTH)) );
		// boton2.setBackground(Color.yellow);
		panel.add(boton2);
		
	}
}
