package Datalive;

import java.awt.EventQueue;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.MutableComboBoxModel;
import javax.swing.JComboBox;
import javax.swing.border.LineBorder;
import java.awt.Color;
import javax.swing.DefaultComboBoxModel;
import java.awt.event.ItemListener;
import java.awt.event.ItemEvent;

public class Pedidomostrador {

	private JFrame frame;
	private JLabel IblOpcion;
	private JComboBox cboCategoria;
	private JComboBox cboProductos;

	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					Pedidomostrador window = new Pedidomostrador();
					window.frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	public Pedidomostrador() {
		initialize();
		imprimirpedido();
	}

	@SuppressWarnings({ "unchecked", "rawtypes" })
	private void initialize() {
		frame = new JFrame();
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setLocation(null);
		frame.setResizable(false);
		frame.setTitle("Pedido mostrador");
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(null);
		
		JLabel lblNewLabel = new JLabel("Categoria");
		lblNewLabel.setBounds(31, 29, 55, 14);
		frame.getContentPane().add(lblNewLabel);
		
		JLabel lblNewLabel_1 = new JLabel("Productos");
		lblNewLabel_1.setBounds(31, 73, 55, 14);
		frame.getContentPane().add(lblNewLabel_1);
		
		JLabel lblNewLabel_2 = new JLabel("Cantidad");
		lblNewLabel_2.setBounds(31, 116, 46, 14);
		frame.getContentPane().add(lblNewLabel_2);
		
		cboCategoria = new JComboBox();
		cboCategoria.addItemListener(new ItemListener() {
			public void itemStateChanged(ItemEvent e) {
				imprimirpedido();
			}
		});
		cboCategoria.setModel(new DefaultComboBoxModel(new String[] {"Empanadas", "Pizzas", "Bebidas", "Sandwiches", "Panchos"}));
		cboCategoria.setBounds(96, 25, 98, 22);
		frame.getContentPane().add(cboCategoria);
		final JComboBox<?> productosModel = new JComboBox<Object>();
		
		cboProductos = new JComboBox();
		cboProductos.addItemListener(new ItemListener() {
			public void itemStateChanged(ItemEvent e) {
				imprimirpedido();
			}
		});
		cboProductos.setBounds(96, 69, 98, 22);
		frame.getContentPane().add(cboProductos);
		
		IblOpcion = new JLabel("New label");
		IblOpcion.setBorder(new LineBorder(new Color(0, 0, 0)));
		IblOpcion.setBounds(60, 141, 149, 99);
		frame.getContentPane().add(IblOpcion);
		
		cboCategoria.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                String categoriaSeleccionada = (String) cboCategoria.getSelectedItem();
                
                if (categoriaSeleccionada.equals("Empanadas")) {
                    ((MutableComboBoxModel) productosModel).addElement("Empanada de Carne");
                    ((MutableComboBoxModel) productosModel).addElement("Empanada de Pollo");
                    ((MutableComboBoxModel) productosModel).addElement("Empanada de Jamón y Queso");
                    ((MutableComboBoxModel) productosModel).addElement("Empanada de Champiñones");
                    ((MutableComboBoxModel) productosModel).addElement("Empanada de Espinacas");
                    
                } else if (categoriaSeleccionada.equals("Bebidas")) {
                    ((MutableComboBoxModel) productosModel).addElement("Coca Cola");
                    ((MutableComboBoxModel) productosModel).addElement("Pepsi");
                    ((MutableComboBoxModel) productosModel).addElement("Paso de los toros");
                    ((MutableComboBoxModel) productosModel).addElement("Sprite");
                    ((MutableComboBoxModel) productosModel).addElement("Seven Up");
                
                } else if (categoriaSeleccionada.equals("Pizzas")) {
                	((MutableComboBoxModel) productosModel).addElement("Pizza Margarita");
                    ((MutableComboBoxModel) productosModel).addElement("Pizza Pepperoni");
                    ((MutableComboBoxModel) productosModel).addElement("Pizza Hawaiana");
                    ((MutableComboBoxModel) productosModel).addElement("Pizza Vegetariana");
                    ((MutableComboBoxModel) productosModel).addElement("Pizza BBQ");
                    ((MutableComboBoxModel) productosModel).addElement("Pizza Muzzarela");
                
                } else if (categoriaSeleccionada.equals("Sandwiches")) {
                	((MutableComboBoxModel) productosModel).addElement("Sandwiche de milanesa");
                	((MutableComboBoxModel) productosModel).addElement("Sandwiche de bondiola");
                	((MutableComboBoxModel) productosModel).addElement("Sandwiche de matambre");
                	((MutableComboBoxModel) productosModel).addElement("Sandwiche de jamon y queso");
                	
                } else if (categoriaSeleccionada.equals("Panchos")) {
                	((MutableComboBoxModel) productosModel).addElement("Pancho extra grande");
                	((MutableComboBoxModel) productosModel).addElement("Pancho comun");
                	((MutableComboBoxModel) productosModel).addElement("Pancho venezolano");
                }
                
            }
        });
	}

	protected void imprimirpedido() {
		String categoria=cboCategoria.getSelectedItem().toString();
		String producto=cboProductos.getSelectedItem().toString();
		IblOpcion.setText(categoria + producto);
		
	}

}
