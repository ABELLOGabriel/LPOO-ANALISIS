package Datalive;

import java.awt.Color;
import java.awt.Font;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import javax.swing.JButton;
import javax.swing.JComboBox;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JSpinner;
import javax.swing.SpinnerNumberModel;

public class Pedidomostrador extends JFrame{
	private static final long serialVersionUID = 1L;
	public JPanel panel;
	public JPanel panel2;
	
	public Pedidomostrador(){
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setTitle("Pedido Mostrador");
		this.getContentPane().setBackground(Color.GRAY);
		this.setSize(400, 690);
		this.setResizable(false);
		this.setLocationRelativeTo(null);
		InicioComponentes();
	}

	public void InicioComponentes() {
		Colocarpaneles();
		ColocarEtiquetas();
		Colocarbotones();
		ColocarCombos();
	}
	
	public void Colocarpaneles() {
		panel= new JPanel();
		panel.setBackground(Color.WHITE);
		panel.setLayout(null);
		this.getContentPane().add(panel);
	}
	
	public void ColocarEtiquetas() {
		JLabel categoria=new JLabel("Categoria");
		categoria.setBounds(40, 40, 200, 50);
		categoria.setForeground(Color.BLACK);
		categoria.setFont(new Font("arial",Font.PLAIN, 15));
		JLabel producto=new JLabel("Productos");
		producto.setBounds(40, 80, 200, 50);
		producto.setForeground(Color.BLACK);
		producto.setFont(new Font("arial",Font.PLAIN, 15));
		JLabel cantidad=new JLabel("Cantidad");
		cantidad.setBounds(40, 120, 200, 50);
		cantidad.setForeground(Color.BLACK);
		cantidad.setFont(new Font("arial",Font.PLAIN, 15));
		JLabel productoelegido=new JLabel("Producto");
		productoelegido.setBounds(40, 330, 200, 50);
		productoelegido.setForeground(Color.BLACK);
		productoelegido.setFont(new Font("arial",Font.PLAIN, 15));
		JLabel cantidadelegida=new JLabel("Cantidad");
		cantidadelegida.setBounds(165, 330, 200, 50);
		cantidadelegida.setForeground(Color.BLACK);
		cantidadelegida.setFont(new Font("arial",Font.PLAIN, 15));
		JLabel precio=new JLabel("Precio");
		precio.setBounds(290, 330, 200, 50);
		precio.setForeground(Color.BLACK);
		precio.setFont(new Font("arial",Font.PLAIN, 15));
		panel.add(categoria);
		panel.add(producto);
		panel.add(cantidad);
		panel.add(productoelegido);
		panel.add(cantidadelegida);
		panel.add(precio);
		
	}
	
	public void Colocarbotones() {
		JButton Agregarpedido=new JButton("Aceptar");
		Agregarpedido.setBounds(90, 550, 100, 30);
		Agregarpedido.setForeground(Color.BLACK);
		Agregarpedido.setFont(new Font("arial", Font.BOLD, 15));
		JButton Cancelarpedido=new JButton("Cancelar");
		Cancelarpedido.setBounds(200, 550, 100, 30);
		Cancelarpedido.setFont(new Font("arial", Font.BOLD, 15));
		JButton Agregar=new JButton("Agregar");
		Agregar.setBounds(145, 300, 100, 25);
		Agregar.setForeground(Color.BLACK);
		Agregar.setFont(new Font("arial", Font.BOLD, 15));
		panel.add(Agregarpedido);
		panel.add(Cancelarpedido);
		panel.add(Agregar);
	
		ActionListener desplegador=new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent ae){
				dispose();
			}
			};
			Agregarpedido.addActionListener(desplegador);
			
			ActionListener desplegador2=new ActionListener() {
				@Override
				public void actionPerformed(ActionEvent ae){
					dispose();
				}
				};
				Cancelarpedido.addActionListener(desplegador2);
	}
	
	public void ColocarCombos(){
		String [] categoria={"Empanadas","Pizzas","Bebidas", "Sandwiches", "Panchos"}; 
		final JComboBox categorias = new JComboBox(categoria);
		categorias.setBounds(145, 55, 100, 20);
		categorias.setSelectedItem(null);
		final JComboBox productos = new JComboBox();
		productos.setBounds(145, 95, 220, 20);
		productos.setSelectedItem(null);
		JSpinner cantidadproductos=new JSpinner();
		cantidadproductos.setBounds(145, 135, 100, 25);
		cantidadproductos.setModel(new SpinnerNumberModel(0, 0, 100, 1));
		panel.add(categorias);
		panel.add(productos);
		panel.add(cantidadproductos);
		
		categorias.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                String categoriaSeleccionada = (String) categorias.getSelectedItem();
                
                
                if (categoriaSeleccionada.equals("Empanadas")) {
                	productos.removeAllItems();
                    productos.addItem("Empanada de Carne");
                    productos.addItem("Empanada de Pollo");
                    productos.addItem("Empanada de Jamón y Queso");
                    productos.addItem("Empanada de Champiñones");
                    productos.addItem("Empanada de Espinacas");
                }	else if (categoriaSeleccionada.equals("Pizzas")) {
                	productos.removeAllItems();
                    productos.addItem("Pizza Margarita");
                    productos.addItem("Pizza Pepperoni");
                    productos.addItem("Pizza Hawaiana");
                    productos.addItem("Pizza Vegetariana");
                    productos.addItem("Pizza BBQ");
                    productos.addItem("Pizza Muzzarela");
                }   else if (categoriaSeleccionada.equals("Bebidas")) {
                	productos.removeAllItems();
                    productos.addItem("Coca Cola");
                    productos.addItem("Pepsi");
                    productos.addItem("Paso de los toros");
                    productos.addItem("Sprite");
                    productos.addItem("Seven Up");
                }   else if (categoriaSeleccionada.equals("Sandwiches")) {
                	productos.removeAllItems();
                    productos.addItem("Sandwiche de milanesa de pollo");
                    productos.addItem("Sandwiche de milanesa de carne");
                    productos.addItem("Sandwiche de bondiola");
                    productos.addItem("Sandwiche de matambre");
                    productos.addItem("Sandwiche de jamon y queso");
            }		else if (categoriaSeleccionada.equals("Panchos")) {
            		productos.removeAllItems();
                	productos.addItem("Pancho extra grande");
                	productos.addItem("Pancho comun");
                	productos.addItem("Pancho venezolano");
            }
          }
		});
  }
}
