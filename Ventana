package Datalive;

import java.awt.Color;
import java.awt.Font;
import java.awt.Image;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class Ventana extends JFrame{
	private static final long serialVersionUID = 1L;
	public JPanel panel;
	
	public Ventana(){
		setSize(500, 500);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setTitle("DATALIVE");
		setLocationRelativeTo(null);
		this.getContentPane().setBackground(Color.GRAY);
		InicioComponentes();
	}
	
	public void InicioComponentes(){
		ColocarPaneles();
		ColocarEtiquetas();
		ColocarBotones();
	}
	
	public void ColocarPaneles(){
		panel= new JPanel();
		panel.setBackground(Color.GRAY);
		panel.setLayout(null);
		this.getContentPane().add(panel);
	}
	
	public void ColocarEtiquetas(){
		
		JLabel titulo=new JLabel("MolyÂ´s Pizzeria");
		titulo.setBounds(390, 10, 300, 50);
		titulo.setForeground(Color.BLACK);
		titulo.setFont(new Font("arial",Font.PLAIN, 41));
		panel.add(titulo);
		
		ImageIcon logo=new ImageIcon("logo.jpg");
		JLabel imagen=new JLabel();
		imagen.setBounds(370, 5, 300, 500);
		imagen.setIcon(new ImageIcon(logo.getImage().getScaledInstance(300, 300, Image.SCALE_SMOOTH)));
		panel.add(imagen);
	}
	
	
	public void ColocarBotones(){
		JButton inicio=new JButton("Iniciar");
		inicio.setBounds(450, 430, 150, 80);
		inicio.setForeground(Color.BLACK);
		inicio.setFont(new Font("arial", Font.BOLD, 25));
		panel.add(inicio);
		
		ActionListener desplegador=new ActionListener() {
		@Override
		public void actionPerformed(ActionEvent ae){
			Ventanalistas nuevo=new Ventanalistas();
			nuevo.setVisible(true);
		}
			
		};
		inicio.addActionListener(desplegador);
	}
	
}
