DROP DATABASE DATALIVE;
CREATE DATABASE DATALIVE;
USE DATALIVE;

CREATE TABLE CLIENTES(
    ID_CLIENTE INT,
    Nom_ape varchar(50),
    telefono INT,
    DNI INT,
    COD_PEDIDO INT,
    CONSTRAINT PK_Clientes PRIMARY KEY (ID_CLIENTE),
    CONSTRAINT FK
);

CREATE TABLE PEDIDOS(
    COD_PEDIDOS INT,
    ID_STOCK INT,
    ID_CLIENTE INT,
    TOTAL,
    CONSTRAINT PK_PEDIDOS PRIMARY KEY (COD_PEDIDOS),
);

CREATE TABLE STOCK(
    ID_STOCK INT,
    FECHA_VENCIMIENTO DATE,
    CANTIDAD_STOCK INT,
    ID_PRODUCTO INT,
    COD_PEDIDO INT,
    CONSTRAINT PK_STOCK PRIMARY KEY (ID_STOCK),
    CONSTRAINT FK_ID FOREIGN KEY (ID_STOCK) REFERENCES PK_PEDIDOS,
    CONSTRAINT FK_ID_PROD FOREIGN KEY (ID_PRODUCTO) REFERENCES PK_ID_PRODUCTO,
);

CREATE TABLE METODO_PAGO(
    COD_PAGO INT,
    FORMA_PAGO VARCHAR(20),
    MONTO_FINAL INT,
    CONSTRAINT PK_COD_PAGO PRIMARY KEY (COD_PAGO),
    CONSTRAINT FK_MONTO FOREIGN KEY(MONTO_FINAL) REFERENCES TOTAL,
);

CREATE TABLE PRODUCTOS(
    ID_PRODUCTO INT,
    Descripcion VARCHAR(60),
    PRECIO INT,
    CONSTRAINT PK_ID_PRODUCTO PRIMARY KEY (ID_PRODUCTO),
);
